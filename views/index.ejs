<%- include("partials/header.ejs") %>

<div class="my-3 p-3 bg-body rounded shadow-sm">
    <h6 class="border-bottom pb-2 mb-0">Recent updates</h6>

    <% if(locals.names.length === 0) {%>
        <p>
            not comment
        </p>
    <% }else{ %>
        <% for(let i = 0 ;i < names.length;i++){ %>
            <div class="d-flex text-body-secondary pt-3">
              <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
              <p class="pb-3 mb-0 small lh-sm border-bottom text-break">
                <strong class="d-block text-gray-dark">@<%=names[i]%></strong>
                <% if(!locals.contentTexts) {%>
                    no content
                <% }else{ %>
                    <%=contentTexts[i]%> 

                    <div class="ms-auto">
                        <form class="mt-1" action="/delete" method="POST">
                            <input type="hidden" name="index" value="<%= i %>">
                            <button type="submit" class="btn btn-danger btn-sm">delete</button>
                        </form>   
                        <form class="mt-1" action="/edit" method="POST">
                            <input type="hidden" name="index" value="<%= i %>">
                            <button type="submit" class="btn btn-info btn-sm">edit</button>
                        </form>   
                    </div>    
                <% }%>
              </p>
            </div>
        <% }%>    
    <% } %>
    <form class="mt-5" action="/comment" method="POST">
        <button type="submit" class="btn btn-primary">leave a comment</button>
    </form>
</div>
